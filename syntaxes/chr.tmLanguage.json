{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Chinese Roofs",
  "patterns": [
    {
      "include": "#translation"
    },
    {
      "include": "#latin"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "translation": {
      "name": "translation.chr",
      "begin": "(^|\\G)\\s*(==)",
      "captures": {
        "1": { "name": "punctuation" },
        "2": { "name": "punctuation" }
      },
      "end": "(==)"
    },
    "latin": {
      "name": "latin.chr",
      "match": "(\\p{Latin})",
      "captures": {
        "1": { "name": "punctuation" }
      }
    },
    "punctuation": {
      "name": "punctuation.chr",
      "match": "(，|、|：|；|。|？|！|《|》|【|】|·|”|“|\"|\"|'|\\[|\\])",
      "captures": {
        "1": { "name": "punctuation" }
      }
    }
  },
  "scopeName": "source.chr"
}
