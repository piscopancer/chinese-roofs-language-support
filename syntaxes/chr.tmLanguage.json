{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Chinese Roofs",
  "patterns": [
    {
      "include": "#translation"
    },
    {
      "include": "#latin"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#comment"
    }
  ],
  "repository": {
    "comment": {
      "name": "comment.chr",
      "match": "^#.*$",
      "captures": {
        "0": {
          "name": "comment"
        }
      }
    },
    "translation": {
      "begin": "^==",
      "end": "^==",
      "name": "translation.chr",
      "patterns": [
        {
          "begin": "(?<===)",
          "end": "(?===)",
          "name": "üçå"
        }
      ]
    },
    "word": {
      "name": "word.chr",
      "match": "^(.*?)(\\s*?\\[.*\\])?(\\s+.*)?$",
      "captures": {
        "1": {
          "name": "original.chr"
        },
        "2": {
          "name": "pinyin.chr",
          "patterns": [
            {
              "match": "[a-zA-Z]+",
              "captures": {
                "0": {
                  "name": "char.chr"
                }
              }
            },
            {
              "match": "\\d+",
              "captures": {
                "0": {
                  "name": "tone.chr"
                }
              }
            }
          ]
        },
        "3": {
          "name": "translation.chr",
          "patterns": [
            {
              "include": "#punctuation"
            },
            {
              "include": "#latin"
            }
          ]
        }
      }
    },
    "latin": {
      "name": "latin.chr",
      "match": "(\\p{Latin})",
      "captures": {
        "1": { "name": "comment" }
      }
    },
    "punctuation": {
      "name": "punctuation.chr",
      "match": "(`|\\.|\\,|\\:|\\;|\\<|\\>|\\[|\\(|\\)|\\]|\\!|\\?|\\.\\.\\.|\"|\"|'|Ôºå|„ÄÅ|Ôºö|Ôºõ|„ÄÇ|Ôºü|ÔºÅ|„Ää|„Äã|„Äê|„Äë|¬∑|‚Äù|‚Äú)",
      "captures": {
        "1": { "name": "punctuation" }
      }
    }
  },
  "scopeName": "source.chr"
}
